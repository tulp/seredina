#yandex_maps

#market_information

= stylesheet_link_tag    'golden_middle/master.css'

%script#market_information_template{ :type => 'text/x-jquery-tmpl' }
  %div
    %dl
      %dt Title
      %dd ${title}
      %dt Discount
      %dd ${discount}
      %dt Time
      %dd ${time}
      %dt Phone
      %dd ${phone}
      %dt Website
      %dd ${website}
      %dt Email
      %dd ${email}
  %div
    %dl
      %dt Add review
      %dd
        = form_for :review, :remote => true, :url => reviews_path, :html => { :id => 'review_form' } do |f|
          = f.hidden_field :market_id, :value => '${id}'
          = f.text_area    :text
          = f.submit 'Put into locale'
  %div
    %ul
      {{each(i, review) reviews}}
      %li
        Text
        ${review.text}
      %li
        Rating
        ${review.rating}
      {{/each }}

#category_selector
  %ul
    %li
      %a.category_link{ :href => '#' }<
        %div= t :all_categories

- unless user_signed_in?
  #overlay
    #buzz
      .action
        %h3 Акция
        %span Карта другу за 50 рублей
      #dialog
        #window_top
        #window_middle
          #title
            %h2= t :dialog_title
            = image_tag 'gold.png'
          #description
            = t :dialog_description
          .select_cart
            %form{ :name => 'select', :method => 'post'}
              %h3
                Выберите ваш вид карты:
              .classic
                %input{ :type => 'radio', :name => 'cart', :value => 'Classic'}Классическая
              .vip
                %input{ :type => 'radio', :name => 'cart', :value => 'Vip'}VIP
          #sign_up_form
            %span 
              = t :dialog_form
            = form_for :user, :url => user_registration_path, :remote => true, :html => { :id => 'dialog_form' } do |f|
              = f.email_field :email, :placeholder => t(:dialog_placeholder)
              = image_submit_tag 'button.png', :id => 'dialog_submit_button'
          .password_form
            %span
              Введите ваш код доступа (присланный вам на email):
            %form{ :method => 'post' }
              %input.password_field{ :type => 'password', :size => '30'}
              %input.to_map{ :type => 'image', :src => '/images/button.png'}
        #window_bottom
    #arrow

.gift
  = form_for :gift, :url => gifts_path, :remote => true, :html => { :id => 'gift_form' } do |f|
    = f.email_field :recipient
    = f.submit "Put into locale"