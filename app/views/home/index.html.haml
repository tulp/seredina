- content_for :head do
  = stylesheet_link_tag    'app/home/index', 'lib/jquery-placeholder-plugin'
  = javascript_include_tag 'app/home/index', 'snippets/yandex_maps', 'snippets/email_validator', 'snippets/cookies',
                           'lib/jquery-placeholder-plugin', 'lib/jquery-ui-1.8.9.custom.min'

#yandex_maps

#category_selector
  %ul
    %li
      %a.category_link{ :href => '#' }<
        %div= t :all_categories

#overlay
  #dialog
    #title
      = t :dialog_title
      = image_tag 'gold.png'
    #description
      = t :dialog_description
    #form
      = t :dialog_form
      = form_for :user, :url => users_path, :html => { :id => 'dialog_form' } do |f|
        = f.email_field :email, :placeholder => t(:dialog_placeholder)
        = image_submit_tag 'button.png', :id => 'dialog_submit_button'